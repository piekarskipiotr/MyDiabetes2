<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyDiabetes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/darker_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/light_dark</item>
        <item name="colorAccent">@color/lavender_web</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorControlActivated">#4d4b5b</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="CustomChip">@style/CustomChipStyle</item>
    </style>

    <style name="lightCard" parent="CardView">
        <item name="cardBackgroundColor">@color/light_dark</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_state</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="android:windowBackground">@drawable/splashscreen_night</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/white</item>
        <item name="boxBackgroundColor">@color/light_dark</item>
    </style>

    <style name="CustomInputLayout2" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>