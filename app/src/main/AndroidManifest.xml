<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.bacon.mydiabetes">

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDiabetes">
        <activity android:name=".SearchActivity"></activity>
        <activity android:name=".ChangeProductNameActivity" />
        <activity android:name=".AddTagActivity" />
        <activity android:name=".EditProductActivity" />
        <activity android:name=".ProductActivity" />
        <activity android:name=".SaveProductActivity" />
        <activity
            android:name=".HomeActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>